@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="prism-container" id="container"></div>

<div class="login-container">
    <div class="branding">
        <img src="~/images/logo.png" alt="EducaPrisma" class="logo">
        <h1>Bem-vindo ao EducaPrisma</h1>
        <p class="subtitle">Faça login para continuar</p>
    </div>

    <div class="auth-options">
        <a href="/login/google" class="google-login-btn">
            <img src="https://developers.google.com/identity/images/btn_google_signin_light_normal_web.png"
                 alt="Login com Google">
        </a>
    </div>
</div>

